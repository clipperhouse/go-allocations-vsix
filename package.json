{
    "name": "go-allocations-vsix",
    "displayName": "Go Allocations Explorer",
    "description": "VS Code extension to help locate Go allocations from benchmarks",
    "version": "0.0.1",
    "publisher": "msherman",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Go Allocations",
            "properties": {}
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "goAllocations",
                    "title": "Go Allocations",
                    "icon": "$(test-view-icon)"
                }
            ]
        },
        "views": {
            "goAllocations": [
                {
                    "id": "goAllocationsExplorer",
                    "name": "Go Allocations"
                }
            ]
        },
        "commands": [
            {
                "command": "goAllocations.runAllBenchmarks",
                "title": "Run all benchmarks and discover allocations",
                "icon": "$(run-all)",
                "when": "view == goAllocationsExplorer"
            },
            {
                "command": "goAllocations.stopAllBenchmarks",
                "title": "Stop all benchmarks",
                "icon": "$(debug-stop)",
                "when": "view == goAllocationsExplorer"
            },
            {
                "command": "goAllocations.openFile",
                "title": "Open File",
                "when": "view == goAllocationsExplorer && viewItem == benchmarkFile"
            },
            {
                "command": "goAllocations.runSingleBenchmark",
                "title": "Run benchmark",
                "icon": "$(play)",
                "when": "view == goAllocationsExplorer && viewItem == benchmarkFunction"
            },
            {
                "command": "goAllocations.test",
                "title": "Test Extension",
                "when": "true"
            },
            {
                "command": "goAllocations.testLowestDepth",
                "title": "Test Lowest Depth",
                "when": "true"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "goAllocations.runAllBenchmarks",
                    "when": "view == goAllocationsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "goAllocations.stopAllBenchmarks",
                    "when": "view == goAllocationsExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "goAllocations.openFile",
                    "when": "view == goAllocationsExplorer && viewItem == benchmarkFile",
                    "group": "inline"
                },
                {
                    "command": "goAllocations.runSingleBenchmark",
                    "when": "view == goAllocationsExplorer && viewItem == benchmarkFunction",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    }
}
