{
    "name": "go-allocations-vsix",
    "displayName": "Go Allocations Explorer",
    "description": "A VS Code extension that helps locate and analyze Go allocations from benchmark tests, providing a tree view similar to the Test Explorer panel.",
    "version": "0.1.0",
    "publisher": "Clipperhouse",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Debugging",
        "Benchmarking"
    ],
    "keywords": [
        "go",
        "golang",
        "benchmark",
        "allocation",
        "performance",
        "profiling",
        "testing"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/clipperhouse/go-allocations-vsix.git"
    },
    "homepage": "https://github.com/clipperhouse/go-allocations-vsix#readme",
    "bugs": {
        "url": "https://github.com/clipperhouse/go-allocations-vsix/issues"
    },
    "license": "MIT",
    "author": {
        "name": "Matt Sherman",
        "email": "mwsherman@gmail.com"
    },
    "activationEvents": [
        "workspaceContains:**/*_test.go"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Go Allocations Explorer",
            "properties": {
                "goAllocations.benchmarkTimeout": {
                    "type": "number",
                    "default": 300,
                    "description": "Timeout in seconds for running benchmarks"
                },
                "goAllocations.maxConcurrency": {
                    "type": "number",
                    "default": 4,
                    "description": "Maximum number of benchmarks to run concurrently"
                },
                "goAllocations.autoRunOnOpen": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically run benchmarks when opening a Go workspace"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "goAllocations",
                    "title": "Go Allocations Explorer",
                    "icon": "$(graph)"
                }
            ]
        },
        "views": {
            "goAllocations": [
                {
                    "id": "goAllocationsExplorer",
                    "name": "Go Allocations Explorer"
                }
            ]
        },
        "commands": [
            {
                "command": "goAllocations.runAllBenchmarks",
                "title": "Run all benchmarks and discover allocations",
                "icon": "$(run-all)",
                "when": "view == goAllocationsExplorer"
            },
            {
                "command": "goAllocations.stopAllBenchmarks",
                "title": "Stop all benchmarks",
                "icon": "$(debug-stop)",
                "when": "view == goAllocationsExplorer"
            },
            {
                "command": "goAllocations.openFile",
                "title": "Open File",
                "when": "view == goAllocationsExplorer && viewItem == benchmarkFile"
            },
            {
                "command": "goAllocations.runSingleBenchmark",
                "title": "Run benchmark",
                "icon": "$(play)",
                "when": "view == goAllocationsExplorer && viewItem == benchmarkFunction"
            },
            {
                "command": "goAllocations.test",
                "title": "Test Extension",
                "when": "true"
            },
            {
                "command": "goAllocations.testLowestDepth",
                "title": "Test Lowest Depth",
                "when": "true"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "goAllocations.runAllBenchmarks",
                    "when": "view == goAllocationsExplorer",
                    "group": "navigation"
                },
                {
                    "command": "goAllocations.stopAllBenchmarks",
                    "when": "view == goAllocationsExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "goAllocations.openFile",
                    "when": "view == goAllocationsExplorer && viewItem == benchmarkFile",
                    "group": "inline"
                },
                {
                    "command": "goAllocations.runSingleBenchmark",
                    "when": "view == goAllocationsExplorer && viewItem == benchmarkFunction",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    }
}
